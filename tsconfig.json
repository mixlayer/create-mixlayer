{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    "target": "ESNext",
    /* modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["eslint.config.mjs", "rspack.config.js", "dist/**"]
}
